    dcc.Graph(
        id='example-graph3',
        figure=fig5
    ),
    dcc.Graph(
        id='example-graph4',
        figure=fig6
    ),    dcc.Graph(
        id='example-graph5',
        figure=fig7
    ),
    dbc.Card(
        [
            html.H2(f"{2*100:.2f}%", className="card-title"),
            html.P("Model Test Accuracy", className="card-text"),
        ],
        body=True,
        color="dark",
        inverse=True,
    )

])

if __name__ == '__main__':
    app.run_server(debug=True)
